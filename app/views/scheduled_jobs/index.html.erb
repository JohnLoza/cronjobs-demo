<p id="notice"><%= notice %></p>

<h1>Scheduled Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scheduled_jobs.each do |scheduled_job| %>
      <tr>
        <td><%= scheduled_job.name %></td>
        <td><%= link_to 'Show', scheduled_job %></td>
        <td><%= link_to 'Edit', edit_scheduled_job_path(scheduled_job) %></td>
        <td><%= link_to 'Destroy', scheduled_job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

